<Window x:Class="Earlvik.ArtiStereo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:layoutToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit"
        Title="ArtiStereo" Height="527" Width="1054" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <TabControl HorizontalAlignment="Stretch" Name="ASMainTab" VerticalAlignment="Stretch" UseLayoutRounding="False">
            <TabItem Header="Room Generator" Name="FirstTab">
                <Grid>
                    <Menu VerticalAlignment="Top" HorizontalAlignment="Stretch">
                        <MenuItem Header="File">
                            <MenuItem Header="Open Room file" Name="RoomOpenMenuItem"></MenuItem>
                            <MenuItem Header="New Room file" Name ="RoomNewMenuItem"></MenuItem>
                            <MenuItem Header="Save Room file" Name="RoomSaveMenuItem"></MenuItem>
                            <Separator />
                            <MenuItem Header="Open Sound file" Name="SoundOpenMenuItem" Click="SoundOpenMenuItem_Click"></MenuItem>
                            <MenuItem Header="Save Sound Result file" Name="SoundSaveMenuItem"></MenuItem>
                        </MenuItem>
                        <MenuItem Header="Edit">
                            <MenuItem Header="Undo" Name="UndoMenuItem"></MenuItem>
                            <MenuItem Header="Redo" Name="RedoMenuItem"></MenuItem>
                            <Separator/>
                            <MenuItem Header="Clear Workplace" Name ="ClearMenuItem"></MenuItem>
                        </MenuItem>
                        <MenuItem Header="Tools">
                            <MenuItem Header="Material Manager" Name="MaterialMenuItem"></MenuItem>
                            <MenuItem Header="Microphone Directional Manger" Name="MicMenuItem"></MenuItem>
                        </MenuItem>
                        <MenuItem Header="Help">
                            <MenuItem Header="Manual" Name="ManMenuItem"></MenuItem>
                            <MenuItem Header="About" Name="AboutMenuItem"></MenuItem>
                        </MenuItem>
                    </Menu>
                    
                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Width="200">
                     <Border CornerRadius="6" BorderBrush="CadetBlue" Background="Lavender" BorderThickness="2">
                       <layoutToolkit:Accordion Name="Accordion">
                           <layoutToolkit:AccordionItem Header="Properties" Name ="PropsAccItem">
                               <Canvas Name="PropsCanvas"></Canvas>
                           </layoutToolkit:AccordionItem>
                           <layoutToolkit:AccordionItem Header="Presets" Name="PresetsAccItem">
                               <Canvas Name="Presetscanvas"></Canvas>
                           </layoutToolkit:AccordionItem>
                           <layoutToolkit:AccordionItem>
                               <Canvas Name="RecordCanvas"></Canvas>
                           </layoutToolkit:AccordionItem>
                       </layoutToolkit:Accordion>  
                     </Border>   
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
